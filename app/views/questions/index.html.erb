<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <div class="post-wrapper">
        <div class="post clearfix">
        <% unless @questions.nil? %>
            <% @questions.each do |question| %>
                <div class="posts-details">
                  <h2 class="post-title"><%= link_to question.title, question %></h2>
                  <div class="details-publication">
                       Pregunt√≥: <%= question.user.fullname %> hace <%= time_ago_in_words(question.created_at) %>
                  </div>
                </div>
             <% end %>
        </div>
        <%= paginate(@questions) %>
        <br>
      <% end %>
      </div>
    </div>
    <br>
  </div>
</div>
