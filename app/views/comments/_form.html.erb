
      <%= form_with(model: [commentable, Comment.new], local: true) do |form|  %>
        <%= render "shared/message" %>
        <div class="field">
          <%= form.text_area :body, autofocus: true, :rows => 2, style: 'width:100%;', placeholder: "Add a comment", class: "form-control" %><br/>
        </div>
        <%= form.submit "Commentate", class: "btn btn-primary pull-right"  %>
      <% end %>
